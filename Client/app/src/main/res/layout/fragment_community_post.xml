<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/post_scroll_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/write_comment"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="title"
                android:textSize="50sp"
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="contents"
                android:textSize="50sp"
                android:id="@+id/post_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_comment_recycler_view" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <EditText
        android:id="@+id/write_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="input your comments"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/comments_register"
        app:layout_constraintBottom_toBottomOf="parent" />
    <Button
        android:id="@+id/comments_register"
        android:text="댓글 등록"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>