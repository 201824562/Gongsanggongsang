<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_guide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.21"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_guide_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.359410"/>
    <ImageView
        android:id="@+id/img_splash_sendy_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/loginimage"
        app:layout_constraintTop_toTopOf="@id/splash_guide_1"
        app:layout_constraintBottom_toBottomOf="@+id/splash_guide_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.46"
        app:layout_constraintDimensionRatio="107:49"/>
</androidx.constraintlayout.widget.ConstraintLayout>
