<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.gongsanggongsang.Login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_baseFragment"
            app:destination="@id/baseFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.gongsanggongsang.SignupFragment"
        android:label="SignupFragment" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/baseFragment"
        android:name="com.example.gongsanggongsang.BaseFragment"
        android:label="fragment_base">
        <action
            android:id="@+id/action_baseFragment_to_communityPreviewFragment"
            app:destination="@id/communityPreviewFragment" />
    </fragment>

    <fragment
        android:id="@+id/communityPreviewFragment"
        android:name="com.example.gongsanggongsang.Third.CommunityPreviewFragment"
        android:label="CommunityMarket">
        <action
            android:id="@+id/action_communityPreview_to_communityWrite"
            app:destination="@+id/communitytWrite"/>
        <argument
            app:argType="string"
            android:name="title"
            android:defaultValue="0"/>
        <argument
            app:argType="string"
            android:name="collection_name"
            android:defaultValue="0"/>
    </fragment>


    <fragment
        android:id="@+id/communitytWrite"
        android:name="CommunityWriteFragment"
        android:label="CommunityMarketWrite">
        <argument
            app:argType="string"
            android:name="collection_name"
            android:defaultValue="0"/>
    </fragment>
    <fragment
        android:id="@+id/communityPost"
        android:name="com.example.gongsanggongsang.Third.CommunityPostFragment"
        android:label="CommunityMarket">
        <argument
            app:argType="string"
            android:name="collection_name"
            android:defaultValue="0" />
        <argument
            app:argType="string"
            android:name="document_name"
            android:defaultValue="0"/>
    </fragment>


</navigation>