<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back_btn"
                android:layout_width="27sp"
                android:layout_height="27sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_arrow_back_basic"/>
            <TextView
                android:id="@+id/toolbarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="내 프로필"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black_87"
                android:background="@color/transparent"
                android:fontFamily="@font/notosanskr_regular_hestia"/>
            <TextView
                android:id="@+id/photoCard_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:text="완료"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/applemint"
                android:background="@color/transparent"
                android:fontFamily="@font/notosanskr_bold_hestia"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="@color/light_gray"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintBottom_toTopOf="@id/photoCard_delete_btn"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/setting_profile_image"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_basic_profile_photo"
                android:background="@drawable/view_oval_pale_orange" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="소속"
                android:textSize="15sp"
                android:textColor="@color/black_87"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <EditText
                android:id="@+id/edit_text_photoCard_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingVertical="8dp"
                android:background="@drawable/edittext_underline_black20"
                android:hint="본인의 소속/직업을 입력해주세요."
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textSize="12sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:textColorHint="@color/black_60"
                android:textColor="@color/black_87" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="이메일"
                android:textSize="15sp"
                android:textColor="@color/black_87"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <EditText
                android:id="@+id/edit_text_photoCard_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingVertical="8dp"
                android:background="@drawable/edittext_underline_black20"
                android:hint="본인의 이메일을 입력해주세요."
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textSize="12sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:textColorHint="@color/black_60"
                android:textColor="@color/black_87" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="소개"
                android:textSize="15sp"
                android:textColor="@color/black_87"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <EditText
                android:id="@+id/edit_text_photoCard_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingVertical="8dp"
                android:background="@drawable/edittext_underline_black20"
                android:hint="본인의 소개를 작성해주세요."
                android:textSize="12sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:textColorHint="@color/black_60"
                android:textColor="@color/black_87" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:visibility="invisible"
        android:id="@+id/photoCard_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/button_5dp_event_stroke_rectangle_black20"
        android:fontFamily="@font/notosanskr_bold_hestia"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="삭제하기"
        android:textColor="@color/pale_orange"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>