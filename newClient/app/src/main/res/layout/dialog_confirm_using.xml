<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_12dp_white">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="사용확인"
        android:textSize="16dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_bold_hestia"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icon_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/ic_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_textview"/>


    <TextView
        android:id="@+id/target_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginStart="8dp"
        android:text="사용 대상"
        android:textSize="12dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        app:layout_constraintStart_toEndOf="@id/icon_box"
        app:layout_constraintTop_toBottomOf="@id/title_textview"/>

    <TextView
        android:id="@+id/document_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="18dp"
        android:text="document_name"
        android:textSize="16dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_textview"/>

    <View
        android:id="@+id/line1"
        android:background="@color/black_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/document_name_textview">
    </View>

    <ImageView
        android:id="@+id/icon_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/ic_clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"/>


    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"
        android:text="사용 시간"
        android:textSize="12dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        app:layout_constraintStart_toEndOf="@id/icon_clock"
        app:layout_constraintTop_toBottomOf="@id/line1"/>

    <TextView
        android:id="@+id/using_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="18dp"
        android:text="00분"
        android:textSize="16dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"/>

    <View
        android:id="@+id/line2"
        android:background="@color/black_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/using_time_textview">
    </View>

    <ImageView
        android:id="@+id/icon_hourglass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/ic_hourglass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"/>

    <TextView
        android:id="@+id/endtime_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"
        android:text="종료 시간"
        android:textSize="12dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        app:layout_constraintStart_toEndOf="@id/icon_hourglass"
        app:layout_constraintTop_toBottomOf="@id/line2"/>

    <TextView
        android:id="@+id/end_using_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="11dp"
        android:text="00:00"
        android:textSize="16dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"/>

    <View
        android:id="@+id/line3"
        android:background="@color/black_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endtime_textview">
    </View>

    <TextView
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="이대로 사용하시겠어요?"
        android:textSize="14dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"/>

    <Button
        android:id="@+id/again_input_time_btn"
        android:background="@drawable/button_10dp_stroke_rectangle_white_bluegreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="18dp"
        android:text="시간 다시 입력"
        android:textSize="14dp"
        android:textColor="@color/blue_green"
        android:fontFamily="@font/notosanskr_bold_hestia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/start_using_btn"
        app:layout_constraintTop_toBottomOf="@id/message_textview" />

    <Button
        android:id="@+id/start_using_btn"
        android:background="@drawable/button_10dp_rectangle_bluegreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="18dp"
        android:text="사용시작!"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_bold_hestia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/again_input_time_btn"
        app:layout_constraintTop_toBottomOf="@id/message_textview"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_using_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>