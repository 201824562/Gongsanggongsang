<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용확인"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/target_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 대상"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_textview"/>

    <TextView
        android:id="@+id/document_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="document_name"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_textview"/>

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 시간"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/target_textview"/>

    <TextView
        android:id="@+id/using_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00분"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/document_name_textview"/>

    <TextView
        android:id="@+id/endtime_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료 시간"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_textview"/>

    <TextView
        android:id="@+id/end_using_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/using_time_textview"/>

    <TextView
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 이대로 사용하시겠어요?"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/endtime_textview"/>

    <Button
        android:id="@+id/again_input_time_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시간 다시 입력"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/start_using_btn"
        app:layout_constraintTop_toBottomOf="@id/message_textview"/>

    <Button
        android:id="@+id/start_using_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="사용시작!"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/again_input_time_btn"
        app:layout_constraintTop_toBottomOf="@id/message_textview"/>

</androidx.constraintlayout.widget.ConstraintLayout>