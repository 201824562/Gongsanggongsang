    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/time_slot_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_6dp_event_stroke_rectangle_palegray"
        android:enabled="false"
        android:text="default"
        android:textSize="14sp"
        android:textColor="@color/reservation_timeslot_textcolor"
        android:fontFamily="@font/notosanskr_regular_hestia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>