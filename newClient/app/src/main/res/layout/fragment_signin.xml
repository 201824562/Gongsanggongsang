<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="로그인"
            android:textColor="@color/applemint"
            android:textSize="24sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black_60"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="반갑습니다. 메이트님!\n공생공생 서비스 이용을 위해 로그인해주세요."/>
        <!--    <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false">
            </androidx.core.widget.NestedScrollView>-->
        <EditText
            android:id="@+id/edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittext_underline_warmgray"
            android:hint="아이디"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textColorHint="#de000000"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit_text_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_underline_warmgray"
            android:hint="비밀번호"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textColorHint="#de000000"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/find_id_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/black_60"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:text="아이디 찾기 |"/>
            <TextView
                android:id="@+id/find_pwd_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/black_60"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:text="비밀번호 찾기"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="172dp"
        android:text="로그인"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_bold_hestia"
        android:background="@drawable/button_5dp_rectangle_bluegreen" />
</androidx.constraintlayout.widget.ConstraintLayout>
