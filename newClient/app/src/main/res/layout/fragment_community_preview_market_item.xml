<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/community_market_preview_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/community_market_preview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="8sp"
                android:text="안입는 옷 팝니다." />

            <TextView
                android:id="@+id/community_market_preview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="8sp"
                android:layout_marginTop="10dp"
                android:text="10,000원"/>
            <TextView
                android:id="@+id/community_market_preview_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="12sp"
                android:layout_marginTop="7dp"
                android:text="안입어서 저렴하게 정리합니다."/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_gravity="end">
                <TextView
                    android:id="@+id/community_market_preview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="6sp"
                    android:text="15분 전"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/ic_community_suggest_triangle_down_icon"/>
                <TextView
                    android:id="@+id/community_market_preview_comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="6sp"
                    android:gravity="end"
                    android:layout_marginLeft="2dp"
                    android:text="5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#0c000000"/>

</LinearLayout>