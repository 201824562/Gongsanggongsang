<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp">
    <TextView
        android:id="@+id/community_market_preview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="8sp"
        android:text="안입는 옷 팝니다."
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/community_market_preview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#de000000"
        android:lineSpacingExtra="8sp"
        android:layout_marginTop="10dp"
        android:text="10,000원"/>
    <TextView
        android:id="@+id/community_market_preview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="12sp"
        android:layout_marginTop="7dp"
        android:text="안입어서 저렴하게 정리합니다."/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/community_preview_self_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_basic_profile_photo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter" />
        <TextView
            android:id="@+id/community_market_preview__name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:letterSpacing="-0.03"
            android:text="닉네임"
            app:layout_constraintLeft_toRightOf="@+id/community_preview_self_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/community_market_preview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textStyle="normal"
            android:textSize="12sp"
            android:text="방금 전"
            android:textColor="@color/black_50"
            android:layout_gravity="center"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/community_comment_number_icon"/>

        <ImageView
            android:id="@+id/community_comment_number_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_community_comment_number_icon"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/community_market_preview_comment_number"/>
        <TextView
            android:id="@+id/community_market_preview_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/community_preview_photo_number_icon"/>
        <ImageView
            android:id="@+id/community_preview_photo_number_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_community_preview_item_photo"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/community_preview_photo_number"/>
        <TextView
            android:id="@+id/community_preview_photo_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginRight="2dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#0c000000"/>

</LinearLayout>