<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/home_notice_part_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:text="분류"
        android:textSize="12sp"
        android:textColor="@color/black_50"
        android:letterSpacing="0"
        android:gravity="center_horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/home_notice_part_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:text="오늘"
        android:textSize="12sp"
        android:textColor="@color/blue_green"
        android:letterSpacing="0"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/home_notice_part_item_category"/>
    <TextView
        android:id="@+id/home_notice_part_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="내용"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingVertical="10dp"
        android:paddingHorizontal="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/home_notice_part_item_date"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black_20"/>
</androidx.constraintlayout.widget.ConstraintLayout>