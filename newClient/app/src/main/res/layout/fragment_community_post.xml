<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/post_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:letterSpacing="-0.03" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/invalid_name"
                    android:layout_gravity="center"/>
                <TextView
                    android:text="작성자"
                    android:id="@+id/community_post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:letterSpacing="-0.03"
                    android:layout_marginLeft="2dp"/>
                <TextView
                    android:text="시간"
                    android:id="@+id/community_post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:letterSpacing="-0.03"
                    android:layout_marginLeft="2dp"/>
                <Button
                    android:id="@+id/post_modify_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="164dp"
                    android:background="@color/transparent"
                    android:textSize="12sp"
                    android:text="수정"/>
                <Button
                    android:id="@+id/post_remove_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:textSize="12sp"
                    android:text="삭제"/>
            </LinearLayout>

            <TextView
                android:id="@+id/post_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="contents"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#cc000000"
                android:lineSpacingExtra="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#0c000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/common_google_signin_btn_text_disabled"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="댓글"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:letterSpacing="-0.03"/>
                <TextView
                    android:id="@+id/community_post_comments_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="0"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:letterSpacing="-0.03"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/post_comment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/community_post_no_name_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/warm_gray"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/community_post_no_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="익명"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#33000000"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="12sp"
            android:layout_weight="2"/>
        <EditText
            android:id="@+id/write_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="댓글을 남겨보세요"
            android:textColor="@color/black"
            android:background="#0c000000"
            android:layout_weight="5"/>
        <ImageButton
            android:id="@+id/comments_register"
            android:src="@drawable/button_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginRight="18dp"
            android:layout_weight="1.5"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>