<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/signup_wait_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="135dp"
        android:src ="@drawable/image_signup"
        />
    <TextView
        android:id="@+id/signup_wait_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signup_wait_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        android:textSize="20sp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:text="가입신청이 완료되었습니다!"/>
    <ImageView
        android:id="@+id/signup_wait_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signup_wait_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:src ="@drawable/image_signup_reversetriangle_orange" />
    <LinearLayout
        android:id="@+id/signup_wait_stateLayout"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_wait_triangle"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pale_orange"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#19000000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/signup_wait_textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signup_wait_stateLayout"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:textSize="12sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="가입신청"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/pale_orange"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="승인대기"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:textSize="12sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="가입완료"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/signup_wait_textLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/signup_wait_textLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/blue_green"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="관리자 승인 후 회원가입이 완료"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="됩니다."/>
    </LinearLayout>
    <TextView
        android:id="@+id/signup_wait_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/signup_wait_textLayout2"
        android:textSize="14sp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:text="승인완료시 PUSH알림으로 알려드릴게요!"/>
    <Button
        android:id="@+id/signup_wait_main_btn"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@drawable/button_20dp_stroke_rectangle_bluegreen"
        app:layout_constraintTop_toBottomOf="@+id/signup_wait_text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:text="처음으로"
        android:textColor="@color/blue_green"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_regular_hestia"/>

</androidx.constraintlayout.widget.ConstraintLayout>