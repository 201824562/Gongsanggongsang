<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0c000000">
        <ImageButton
            android:id="@+id/preview_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_community_back_icon"
            android:layout_marginLeft="16dp"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/preview_toolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:text="퇴실 신청 내역"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
            android:id="@+id/preview_write_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_community_write_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0c000000" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_out_item_time"
            android:layout_weight="1"
            android:gravity="center"
            android:text="시간"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/blue_green"
            android:background="@color/transparent"
            android:lineSpacingExtra="6sp"/>

        <TextView
            android:id="@+id/settings_out_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:lineSpacingExtra="6sp"
            android:background="@color/transparent"
            android:textColor="@color/blue_green"
            android:layout_weight="1"
            android:gravity="center"
            android:text="신청인"/>
        <TextView
            android:id="@+id/settings_out_item_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:textColor="@color/blue_green"
            android:lineSpacingExtra="6sp"

            android:layout_weight="1"
            android:gravity="left"
            android:text="호수"/>
        <TextView
            android:id="@+id/settings_out_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="12sp"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/blue_green"
            android:layout_weight="1.5"
            android:gravity="center"
            android:background="@color/transparent"
            android:text="상태"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/community_preview_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</LinearLayout>