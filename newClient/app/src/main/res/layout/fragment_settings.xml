<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        android:text="마이페이지"
        android:textColor="@color/black_87"
        android:textSize="24sp"
        android:fontFamily="@font/notosanskr_bold_hestia" />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/title_layout"
        android:background="@color/light_gray"/>
    <ScrollView
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view1"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/userNickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textSize="15sp"
                            android:textColor="@color/black_80"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 님의 프로필"
                            android:textSize="12sp"
                            android:textColor="@color/black_60"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름 : "
                            android:textSize="11sp"
                            android:textColor="@color/black_60"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textSize="11sp"
                            android:textColor="@color/black_87"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="소속 : "
                            android:textSize="11sp"
                            android:textColor="@color/black_60"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                        <TextView
                            android:id="@+id/userAgency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textSize="11sp"
                            android:textColor="@color/black_87"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="생년월일 : "
                            android:textSize="11sp"
                            android:textColor="@color/black_60"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                        <TextView
                            android:id="@+id/userBirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textSize="11sp"
                            android:textColor="@color/black_87"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화번호 : "
                            android:textSize="11sp"
                            android:textColor="@color/black_60"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                        <TextView
                            android:id="@+id/userSms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textSize="11sp"
                            android:textColor="@color/black_87"
                            android:fontFamily="@font/notosanskr_regular_hestia" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/setting_profile_image"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        android:src="@drawable/ic_basic_profile_photo"
                        android:background="@drawable/view_oval_pale_orange"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                   <!-- <TextView
                        android:id="@+id/userNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="대프리카인"
                        android:textSize="15sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />-->
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/light_gray"/>
            <!--<androidx.cardview.widget.CardView
                android:id="@+id/changeInfo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_underline_light_gray"
                    android:gravity="start"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="20dp"
                    android:text="계정정보 관리"
                    android:textSize="14sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia"
                    android:clickable="false"/>
            </androidx.cardview.widget.CardView>-->
            <androidx.cardview.widget.CardView
                android:id="@+id/changePwd_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_underline_light_gray"
                    android:gravity="start"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="20dp"
                    android:text="비밀번호 변경"
                    android:textSize="14sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia"
                    android:clickable="false"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/withdrawal_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_underline_light_gray"
                    android:gravity="start"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="20dp"
                    android:text="탈퇴신청"
                    android:textSize="14sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia"
                    android:clickable="false"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_underline_light_gray"
                    android:gravity="start"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="20dp"
                    android:text="로그아웃"
                    android:textSize="14sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia"
                    android:clickable="false"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>