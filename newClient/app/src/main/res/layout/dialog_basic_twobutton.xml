<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="-----------------?"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/notosanskr_bold_hestia" />
        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="-------------------------------------."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_regular_hestia"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/dialog_delete_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="삭제하기"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanskr_bold_hestia"
                android:textSize="16sp"
                android:background="@color/applemint"/>
            <Button
                android:id="@+id/dialog_close_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="닫기"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanskr_bold_hestia"
                android:textSize="16sp"
                android:background="@color/warm_gray"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>