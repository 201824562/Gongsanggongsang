<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:id="@+id/fragment_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="소속 선택"
            android:textColor="@color/applemint"
            android:textSize="24sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black_60"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="메이트님은\n어떤 공생공간에 거주하고 계신가요?"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_title_layout"
        app:layout_constraintBottom_toTopOf="@id/signup_nextbtn"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/signup_search_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/signup_search_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="8dp"
                android:textSize="14sp"
                android:textColorHint="@color/black_87"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:background="@android:color/transparent"
                app:defaultQueryHint="당신의 공생공간을 검색해주세요."
                app:queryBackground="@android:color/transparent"
                app:searchIcon="@drawable/ic_location_bluegreen"/>
            <ImageButton
                android:id="@+id/signup_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_search_bluegreen"
                app:layout_constraintLeft_toRightOf="@id/signup_search_edit"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue_green"/>
        <TextView
            android:id="@+id/signup_search_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:textColor="@color/pinkish_orange"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text=""
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/signup_search_result_empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="검색결과가 없습니다.\n공생공생에 등록되지 않았거나 잘못된 이름입니다."
            android:textSize="12sp"
            android:textColor="@color/black_87"
            android:gravity="center"
            android:visibility="gone" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/signup_search_result_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_signup_search_list"/>
    </LinearLayout>
    <Button
        android:id="@+id/signup_nextbtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="172dp"
        android:text="다음"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_bold_hestia"
        android:background="@drawable/button_5dp_rectangle_black20" />

</androidx.constraintlayout.widget.ConstraintLayout>
