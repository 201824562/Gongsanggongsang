<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:id="@+id/main_home_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="36dp"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:text="장학재단 부산센터"/>
        <TextView
            android:id="@+id/main_home_hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_home_where"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            android:textColor="#de000000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="안녕하세요\n메이트님!"/>
        <LinearLayout
            android:id="@+id/main_home_shortcut_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_home_hello"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            android:gravity="bottom"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/mainHome_to_equipmentReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_mainhome_direct_reservation_icon"
                android:background="@color/transparent"/>
            <ImageButton
                android:id="@+id/mainHome_to_facilityReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mainhome_reservation_icon"
                android:layout_weight="1"
                android:background="@color/transparent"/>
            <ImageButton
                android:id="@+id/mainHome_to_suggestCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mainhome_goto_suggest"
                android:layout_weight="1"
                android:background="@color/transparent"/>
            <ImageButton
                android:id="@+id/mainHome_to_withCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_community_main_with_icon"
                android:layout_weight="1"
                android:background="@color/transparent"/>
            <ImageButton
                android:id="@+id/mainHome_to_marketCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_community_main_market_icon"
                android:layout_weight="1"
                android:background="@color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_home_shortcut_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_home_shortcut_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="바로사용"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/transparent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="예약사용"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/transparent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="건의"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/transparent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="함께"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/transparent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="장터"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/transparent"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/main_home_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_home_shortcut_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="47dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:textSize="20sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/main_home_notice_all_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_green"
                android:textSize="14sp"
                android:text="전체보기"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainHome_notice_notice_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/main_home_notice_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:overScrollMode="never"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>