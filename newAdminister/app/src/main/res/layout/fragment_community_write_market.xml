<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0c000000">
        <ImageButton
            android:id="@+id/market_write_back_button"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_community_back_icon"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:text="장터글쓰기"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/market_write_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:textColor="#ff9966"
            android:lineSpacingExtra="8sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="완료"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진"
        android:textSize="14sp"
        android:textColor="#de000000"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/market_write_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_community_market_photo_icon"
            android:background="@color/transparent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/market_write_photo_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#0c000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#de000000"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:id="@+id/market_write_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목을 입력해주세요"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColorHint="#7f000000"
        android:lineSpacingExtra="8sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="20dp"
        android:backgroundTint="#33000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#de000000"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:id="@+id/market_write_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="가을 입력해주세요"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColorHint="#7f000000"
        android:lineSpacingExtra="8sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="20dp"
        android:backgroundTint="#33000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#de000000"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/market_write_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColorHint="#7f000000"
        android:lineSpacingExtra="8sp"
        android:hint="내용을 입력해주세요."
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="20dp"
        android:backgroundTint="#33000000" />

</LinearLayout>