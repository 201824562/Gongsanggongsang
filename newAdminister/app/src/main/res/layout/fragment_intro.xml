    <ImageView
        android:id="@+id/maing_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="135dp"
        android:src ="@drawable/image_main_image"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/maing_image">
        <EditText
            android:id="@+id/edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittext_underline_warmgray"
            android:hint="아이디"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textColorHint="#de000000"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit_text_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_underline_warmgray"
            android:hint="비밀번호"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:textColorHint="#de000000"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:text="로그인"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:background="@drawable/button_5dp_rectangle_bluegreen" />
    </LinearLayout>
