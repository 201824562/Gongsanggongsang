<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/main_home_where"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="36dp"
                android:textColor="#de000000"
                android:textSize="14sp"
                android:text="장학재단 부산센터"/>
            <TextView
                android:id="@+id/main_home_hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_home_where"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="24dp"
                android:textColor="#de000000"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="안녕하세요\n관리자님!"/>
            <LinearLayout
                android:id="@+id/main_home_shortcut_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_home_hello"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mainhome_direct_reservation_icon"
                    android:background="@color/transparent"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mainhome_reservation_icon"
                    android:layout_weight="1"
                    android:background="@color/transparent"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_community_main_market_icon"
                    android:layout_weight="1"
                    android:background="@color/transparent"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_community_main_emergency_icon"
                    android:layout_weight="1"
                    android:background="@color/transparent"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_community_main_suggest_icon"
                    android:layout_weight="1"
                    android:background="@color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_home_shortcut_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_home_shortcut_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="바로사용"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/transparent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="예약사용"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/transparent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="건의"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/transparent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="함께"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/transparent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="장터"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_home_notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_home_shortcut_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="47dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/main_home_notice_all_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_green"
                    android:textSize="14sp"
                    android:text="전체보기"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_home_notice_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_home_notice_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_home_notice_1_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/blue_green"
                    android:gravity="center_horizontal"
                    tools:text="오늘"/>

                <TextView
                    android:id="@+id/main_home_notice_1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="22시 이후에는 소음에 주의해주세요."
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/main_home_notice_1"
                android:background="#0c000000"/>
            <LinearLayout
                android:id="@+id/main_home_notice_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/main_home_notice_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_home_notice_2_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/blue_green"
                    android:gravity="center_horizontal"
                    tools:text="오늘"/>
                <TextView
                    android:id="@+id/main_home_notice_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="22시 이후에는 소음에 주의해주세요."
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/main_home_notice_2"
                android:background="#0c000000"/>
            <LinearLayout
                android:id="@+id/main_home_notice_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/main_home_notice_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_home_notice_3_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/blue_green"
                    android:gravity="center_horizontal"
                    tools:text="오늘"/>

                <TextView
                    android:id="@+id/main_home_notice_3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    tools:text="22시 이후에는 소음에 주의해주세요."/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/main_home_notice_3"
                android:background="#0c000000"/>
            <LinearLayout
                android:id="@+id/main_home_mate_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_home_notice_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공생 메이트"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/main_home_mate_all_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_green"
                    android:textSize="14sp"
                    android:text="전체보기"/>
            </LinearLayout>
            <TextView
                android:id="@+id/main_home_mate_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_home_mate_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#33000000"
                android:text="어떤 사람들이 함께 살고 있을까요?"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_home_mate_hello"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>