<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:background="@drawable/edittext_underline_light_gray"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_reservation_log_reservationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text=" - 사용"
            android:textSize="12sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_regular_hestia" />
        <TextView
            android:id="@+id/item_reservation_log_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text=" - "
            android:textSize="16sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_bold_hestia" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/black_50"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용자"
                    android:textSize="14sp"
                    android:textColor="@color/black_50"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/item_reservation_log_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textSize="14sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="14sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/item_reservation_log_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:layout_marginRight="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                </LinearLayout>
                <TextView
                    android:id="@+id/item_reservation_log_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textSize="14sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용시간"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/black_50"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_reservation_log_startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textSize="14sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:id="@+id/item_reservation_log_endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/item_reservation_log_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/view_5dp_stroke_rectangle_black20"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text=" - "
        android:textSize="16sp"
        android:textColor="@color/black_60"
        android:fontFamily="@font/notosanskr_regular_hestia" />
</LinearLayout>
