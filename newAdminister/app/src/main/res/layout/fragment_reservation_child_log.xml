<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="18dp"
        android:paddingRight="22dp"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:id="@+id/reservation_log_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="전체"
            android:textSize="12sp"
            android:textColor="@color/black_20"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:minWidth="40dp"
            android:minHeight="5dp"
            android:background="@drawable/button_20dp_event_stroke_rectangle_black20"/>
        <Button
            android:id="@+id/reservation_log_equipment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="바로 사용"
            android:textSize="12sp"
            android:textColor="@color/black_20"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:minWidth="5dp"
            android:minHeight="5dp"
            android:background="@drawable/button_20dp_event_stroke_rectangle_black20"/>
        <Button
            android:id="@+id/reservation_log_facility_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약 사용"
            android:textSize="12sp"
            android:textColor="@color/black_20"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:minWidth="5dp"
            android:minHeight="5dp"
            android:background="@drawable/button_20dp_event_stroke_rectangle_black20"/>
    </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/reservation_log_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_layout"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>