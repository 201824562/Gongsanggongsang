<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/transparent">
    <LinearLayout
        android:id="@+id/item_allowed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/view_border_light_gray"
        android:padding="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/setting_profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_basic_profile_photo"
                android:background="@drawable/view_oval_pale_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="이름"
                    android:textSize="12sp"
                    android:textColor="@color/black_50"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="닉네임"
                    android:textSize="12sp"
                    android:textColor="@color/black_50"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="생년월일"
                    android:textSize="12sp"
                    android:textColor="@color/black_50"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴대폰번호"
                    android:textSize="12sp"
                    android:textColor="@color/black_50"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_allowed_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="이름"
                    android:textSize="12sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:id="@+id/item_allowed_userNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="닉네임"
                    android:textSize="12sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:id="@+id/item_allowed_userBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="생년월일"
                    android:textSize="12sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
                <TextView
                    android:id="@+id/item_allowed_userSmsInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴대폰번호"
                    android:textSize="12sp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/deny_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_10dp_stroke_rectangle_black20"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="회원 퇴출"
            android:textColor="@color/pinkish_orange"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>