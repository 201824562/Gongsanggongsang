<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="20dp"
        android:text="마이페이지"
        android:textSize="34sp"
        android:fontFamily="@font/notosanskr_bold_hestia" />
    <TextView
        android:id="@+id/title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_layout"
        app:layout_constraintLeft_toLeftOf="@id/title_layout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="마이페이지 설명"
        android:textColor="@color/black_80"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_bold_hestia" />
    <ScrollView
        android:id="@+id/content_layout"
        app:layout_constraintTop_toBottomOf="@+id/title_detail"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/view_borderupdown_lightgray"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="입주생관리"
                android:textSize="16sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:textStyle="bold"
                android:clickable="false"/>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>